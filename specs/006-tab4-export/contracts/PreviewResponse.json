{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PreviewResponse",
  "description": "Response for GET /api/projects/{project_id}/ebook/preview",
  "type": "object",
  "properties": {
    "data": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "html": {
              "type": "string",
              "description": "Complete HTML document with embedded styles and images"
            }
          },
          "required": ["html"]
        },
        { "type": "null" }
      ]
    },
    "error": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "enum": ["PROJECT_NOT_FOUND", "INTERNAL_ERROR"]
            },
            "message": {
              "type": "string"
            }
          },
          "required": ["code", "message"]
        },
        { "type": "null" }
      ]
    }
  },
  "required": ["data", "error"]
}
