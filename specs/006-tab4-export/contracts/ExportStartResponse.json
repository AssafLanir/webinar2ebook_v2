{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExportStartResponse",
  "description": "Response for POST /api/projects/{project_id}/ebook/export",
  "type": "object",
  "properties": {
    "data": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "job_id": {
              "type": "string",
              "format": "uuid",
              "description": "UUID of the created export job"
            }
          },
          "required": ["job_id"]
        },
        { "type": "null" }
      ]
    },
    "error": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "enum": ["PROJECT_NOT_FOUND", "NO_DRAFT_CONTENT", "INVALID_FORMAT", "INTERNAL_ERROR"]
            },
            "message": {
              "type": "string"
            }
          },
          "required": ["code", "message"]
        },
        { "type": "null" }
      ]
    }
  },
  "required": ["data", "error"]
}
