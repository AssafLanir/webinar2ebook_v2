{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "rewrite_plan.schema.json",
  "title": "RewritePlan",
  "description": "Plan for targeted rewrite of flagged sections. References QA issues and Evidence Map to constrain rewrites.",
  "type": "object",
  "required": ["version", "project_id", "sections"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "integer",
      "description": "Schema version for forward compatibility",
      "const": 1
    },
    "project_id": {
      "type": "string",
      "description": "Associated project ID"
    },
    "qa_report_id": {
      "type": "string",
      "description": "Reference to QA report that triggered this rewrite"
    },
    "evidence_map_hash": {
      "type": "string",
      "description": "Hash of evidence map to ensure consistency"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "pass_number": {
      "type": "integer",
      "minimum": 1,
      "maximum": 3,
      "description": "Which rewrite pass this is (warn if > 1)"
    },
    "sections": {
      "type": "array",
      "description": "Sections to rewrite with their constraints",
      "items": {
        "$ref": "#/$defs/RewriteSection"
      }
    },
    "global_constraints": {
      "type": "array",
      "description": "Constraints that apply to all rewrites",
      "items": { "type": "string" },
      "examples": [
        "Do not add claims not in evidence map",
        "Preserve all heading levels",
        "Maintain existing markdown formatting"
      ]
    }
  },
  "$defs": {
    "RewriteSection": {
      "type": "object",
      "description": "A single section to rewrite",
      "required": ["section_id", "chapter_index", "issues_addressed", "original_text"],
      "additionalProperties": false,
      "properties": {
        "section_id": {
          "type": "string",
          "description": "Unique identifier for this rewrite section"
        },
        "chapter_index": {
          "type": "integer",
          "minimum": 1,
          "description": "Which chapter contains this section"
        },
        "heading": {
          "type": ["string", "null"],
          "description": "Section heading if applicable"
        },
        "start_line": {
          "type": "integer",
          "minimum": 1,
          "description": "Starting line in draft markdown (1-indexed)"
        },
        "end_line": {
          "type": "integer",
          "minimum": 1,
          "description": "Ending line in draft markdown (1-indexed)"
        },
        "original_text": {
          "type": "string",
          "description": "Original text to be rewritten"
        },
        "issues_addressed": {
          "type": "array",
          "description": "QA issue IDs this rewrite addresses",
          "items": {
            "type": "object",
            "required": ["issue_id", "issue_type"],
            "additionalProperties": false,
            "properties": {
              "issue_id": {
                "type": "string",
                "description": "Reference to QA issue ID"
              },
              "issue_type": {
                "type": "string",
                "enum": ["repetition", "clarity", "faithfulness", "structure", "completeness"],
                "description": "Type of issue being addressed"
              },
              "issue_message": {
                "type": "string",
                "description": "Original issue message for context"
              }
            }
          }
        },
        "allowed_evidence_ids": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Evidence entry IDs that can be used in rewrite (from Evidence Map)"
        },
        "rewrite_instructions": {
          "type": "string",
          "description": "Specific instructions for how to rewrite this section"
        },
        "preserve": {
          "type": "array",
          "description": "Elements that must be preserved in rewrite",
          "items": { "type": "string" },
          "examples": ["heading", "bullet_structure", "code_blocks", "links"]
        }
      }
    }
  }
}
