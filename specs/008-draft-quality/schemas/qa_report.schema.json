{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "qa_report.schema.json",
  "title": "QA Report",
  "description": "Quality assessment report for an ebook draft",
  "type": "object",
  "required": ["id", "project_id", "draft_hash", "overall_score", "rubric_scores", "issues", "generated_at", "analysis_duration_ms", "version"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique report identifier"
    },
    "project_id": {
      "type": "string",
      "description": "Reference to the project"
    },
    "draft_hash": {
      "type": "string",
      "minLength": 1,
      "description": "Hash of draft text for cache invalidation"
    },
    "overall_score": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Overall quality score"
    },
    "rubric_scores": {
      "$ref": "#/$defs/RubricScores"
    },
    "issues": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/QAIssue"
      },
      "description": "List of detected quality issues"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the report was generated"
    },
    "analysis_duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Analysis duration in milliseconds"
    },
    "version": {
      "type": "string",
      "description": "Schema version for migrations"
    }
  },
  "$defs": {
    "RubricScores": {
      "type": "object",
      "required": ["structure", "clarity", "faithfulness", "repetition", "completeness"],
      "additionalProperties": false,
      "properties": {
        "structure": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Heading hierarchy and chapter balance score"
        },
        "clarity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Sentence length, passive voice, jargon score"
        },
        "faithfulness": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Alignment with source material score"
        },
        "repetition": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Inverse of repetition (100 = no repetition)"
        },
        "completeness": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Coverage of source topics score"
        }
      }
    },
    "QAIssue": {
      "type": "object",
      "required": ["id", "severity", "issue_type", "message"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique issue identifier"
        },
        "severity": {
          "type": "string",
          "enum": ["critical", "warning", "info"],
          "description": "Issue severity level"
        },
        "issue_type": {
          "type": "string",
          "enum": ["repetition", "structure", "clarity", "faithfulness", "completeness"],
          "description": "Category of the issue"
        },
        "chapter_index": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "Chapter index (0-based), null if global"
        },
        "heading": {
          "type": ["string", "null"],
          "description": "Heading where issue occurs"
        },
        "location": {
          "type": ["string", "null"],
          "description": "Text excerpt showing location"
        },
        "message": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "description": "Human-readable issue description"
        },
        "suggestion": {
          "type": ["string", "null"],
          "maxLength": 500,
          "description": "Actionable fix suggestion"
        },
        "metadata": {
          "type": ["object", "null"],
          "description": "Additional issue-specific data"
        }
      }
    }
  }
}
